<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Recipe Puppy</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <div class="container">

      <h1 id="page-title">Recipe Puppy</h1>

      {{ #recipes }}

      <div class="result">

        <section class="result-header">

          {{ #thumbnail }}
          <img class="thumbnail" src="{{ thumbnail }}" alt="">
          {{ /thumbnail }}

          {{ ^thumbnail }}
          <img class="thumbnail" src="/assets/images/placeholder.png" alt="">
          {{ /thumbnail }}

          <h1 class="title"><a href="{{ href }}">{{ title }}</a></h1>
        </section>

        <section class="ingredients-section">
          <h2>Ingredients</h2>
          <ul>
            {{ #ingredients }}
            <li>{{ . }}</li>
            {{ /ingredients }}
          </ul>
        </section>

      </div>

      <hr>

      {{ /recipes }}

    </div>
  </body>
</html>
